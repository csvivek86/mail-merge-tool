# Streamlit Secrets Configuration
# Copy this file to .streamlit/secrets.toml and add your actual values
# DO NOT commit secrets.toml to version control

[email]
# Gmail OAuth Credentials
GOOGLE_CLIENT_ID = "your-google-client-id.googleusercontent.com"
GOOGLE_CLIENT_SECRET = "your-google-client-secret"

# Default SMTP Settings
DEFAULT_SMTP_SERVER = "smtp.gmail.com"
DEFAULT_SMTP_PORT = 587
DEFAULT_FROM_EMAIL = "treasurer@nsna.org"

[app]
# Application Settings
ADMIN_PASSWORD = "your-admin-password"
SESSION_SECRET = "your-session-secret-key"

[paths]
# File Paths
TEMPLATES_DIR = "src/templates"
CONFIG_DIR = "config"
LOGS_DIR = "logs"

# Example of how to use in your app:
# import streamlit as st
# client_id = st.secrets["email"]["GOOGLE_CLIENT_ID"]
